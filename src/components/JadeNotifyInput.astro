<div class="notify-me flex flex-row justify-center z-10">
    <div class="input-group box-border w-[90%] max-w-[500px] flex flex-row rounded-sm overflow-hidden">
        <input type="text" placeholder="Write your email address" class="p-2 w-3/4 inline-block text-dark"/>
        <button data-modal-target="default-modal" data-modal-toggle="default-modal" id="show-modal"
                class="bg-primary p-2 w-1/4 align-top hover:opacity-90" type="button">Subscribe</button>
    </div>
</div>
<div id="default-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 bottom-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full mx-auto my-[15%]">
        <!-- Modal content -->
        <div class="relative bg-neutral rounded-lg shadow">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t bg-neutral">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Thank you!
                </h3>
                <button id="close_button" type="button" class="text-gray-400 bg-transparent hover:bg-neutral hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="default-modal">
                    <svg  class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 md:p-5 space-y-4">
                <p class="text-base leading-relaxed text-gray-500">
                    Thank you for subscribing! we connect to you soon.
                </p>
            </div>
        </div>
    </div>
</div>
<script is:inline>
    (() => {
        const button = document.getElementById('show-modal');
        button.addEventListener('click', () => {
            const modal = document.getElementById('default-modal');
            if (modal?.classList.contains('hidden'))
            {
                modal.classList.remove('hidden');
            }
        });
        const close_button = document.getElementById('close_button');
        close_button.addEventListener('click', () => {
            const modal = document.getElementById('default-modal');
            if (!modal?.classList.contains('hidden'))
            {
                modal.classList.add('hidden');
            }
        });
    })();
</script>